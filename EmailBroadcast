prenoms = listcreat(PRENOMS)
noms = listcreat(NOMS)
email = []

for i in range(30,len(prenoms)):       #entrain de faire de 0 à 10
    for j in range(0,len(noms)):      #fait de 0 à len
        mail = prenoms[i]+"."+noms[j]+"@gmail.com"
        email.append(mail)


user = 'my@email'
app_password = 'donteventry' # a token for gmail
subject = 'the subject'

content = """
Your email
"""

k = 0
while k < len(email):
    to = email[k]
    try :
        with yagmail.SMTP(user, app_password) as yag:
            yag.send(to, subject, content)
            print('Sent email successfully   '+str(round(100*k/len(email),3))+"%")
            k+=1
    except :
        print('sending fail')
        k+=1
