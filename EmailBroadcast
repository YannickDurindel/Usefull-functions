import yagmail
import time

def listcreat(text):
    liste = []
    n = 0
    for i in range (0,len(text)-1):
        if text[i]=="ü":
            text = text[0:i]+"u"+text[i+1:len(text)]
        if text[i]=="é":
            text = text[0:i]+"e"+text[i+1:len(text)]
        if text[i]=="í":
            text = text[0:i]+"i"+text[i+1:len(text)]
        if text[i]=="è":
            text = text[0:i]+"e"+text[i+1:len(text)]            
        if text[i+1]=="\n" or text[i+1]==",":
            string = text[n:i+1]
            string = string.lower()
            if text[n-1] == ",":
                string = string[1:len(string)]
            liste.append(string)
            n = i+2
    return liste

